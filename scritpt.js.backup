var buku_perpus = ['Python','Javascript','C++']

class Perpustakaan{
	lihat_daftar(){
		console.log('Daftar Buku :');
		console.log(buku_perpus);
		return this
	};
	cari(cari,daftar){
		let res = false
		for (let i = daftar.length - 1; i >= 0; i--) {
			if (cari == daftar[i]) {
				console.log('Buku ',cari,' ditemukan');
				res = true
			};
		if (res){
			return [true,cari]
		} else {
			return [false]
		}
		}
	};
};
class Akun extends Perpustakaan{
	pinjaman = [];
	pinjam(buku){
		let data = this.cari(buku,buku_perpus);
		buku_perpus.splice(data[1],1)
		if (data[0]){
			this.pinjaman.push(data[1])
			console.log('Berhasil meminjam ',data[1]);
			return this
		} else if (data[0] == false){
			console.log('Maaf,',buku,' tidak ditemukan')
			return this
		}
	};
	cek_pinjaman(){
		console.log('Pinjaman : ')
		console.log(this.pinjaman)
		return this
	};
	kembalikan_buku(buku){
		let data = this.cari(buku,this.pinjaman);
		this.pinjaman.splice(data[1],1);
		if (data[0]){
			buku_perpus.push(data[1])
			console.log('Berhasil mengembalikan ',data[1]);
			return this
		} else if (data[0] == false){
			console.log('Anda tidak meminjam buku ',buku)
			return this
		};
	};
};

let philip = new Akun();
let budi = new Akun();

const cari_button = document.querySelector('#cari-buku')
cari_button.addEventListener('click',function(){
	let message = document.querySelector('#cari-buku-input').value
	console.log(`Mencari ${message}`)
	result = philip.cari(message,buku_perpus)
	if (result[0]){
		document.querySelector('#interact-container').innerHTML = result[1]
	}
});

philip.lihat_daftar().pinjam('Python').lihat_daftar().cek_pinjaman();